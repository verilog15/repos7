<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.AnimationsPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Animations">
    <views:BasePage.Content>
        <StackLayout
            Margin="12">
            <Image 
                x:Name="DotNetBotImage" 
                Source="dotnet_bot.png" 
                VerticalOptions="CenterAndExpand" />
            <Button 
                x:Name="StartButton"
                Text="Start Animation" 
                Clicked="OnStartAnimationButtonClicked" />
            <Button 
                x:Name="StartCustomButton"
                Text="Start Custom Animation" 
                Clicked="OnStartCustomAnimationButtonClicked" />
            <Button
                x:Name="CancelButton" 
                Text="Cancel Animation" 
                Clicked="OnCancelAnimationButtonClicked"
                IsEnabled="false" />
        </StackLayout>
    </views:BasePage.Content>
</views:BasePage>