<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.BorderAlignment"
    Title="Border Alignment">
    <ContentPage.Content>
        <StackLayout 
            Margin="12" 
            Spacing="12">
            <Label
                HorizontalOptions="Start"
                Text="Start"
                Style="{StaticResource Headline}"/>
            <Border
                HorizontalOptions="Start"
                StrokeThickness="5"
                Stroke="Red">
                <Border.StrokeShape>
                    <RoundRectangle
                        CornerRadius="5" />
                </Border.StrokeShape>
                <Grid
                    BackgroundColor="Blue"
                    HeightRequest="40">
                    <Label
                        Text="Start"
                        TextColor="White"/>
                </Grid>
            </Border>
            <Label
                HorizontalOptions="Center"
                Text="Center"
                Style="{StaticResource Headline}"/>
            <Border
                HorizontalOptions="Center"
                StrokeThickness="5"
                Stroke="Red">
                <Border.StrokeShape>
                    <RoundRectangle
                        CornerRadius="5" />
                </Border.StrokeShape>
                <Grid
                    BackgroundColor="Blue"
                    HeightRequest="40">
                    <Label
                        Text="Center"
                        TextColor="White"/>
                </Grid>
            </Border>
            <Label
                HorizontalOptions="End"
                Text="End"
                Style="{StaticResource Headline}"/>
            <Border
                HorizontalOptions="End"
                StrokeThickness="5"
                Stroke="Red">
                <Border.StrokeShape>
                    <RoundRectangle
                        CornerRadius="5" />
                </Border.StrokeShape>
                <Grid
                    BackgroundColor="Blue"
                    HeightRequest="40">
                    <Label
                        Text="End"
                        TextColor="White"/>
                </Grid>
            </Border>
            <Label
                HorizontalOptions="Fill"
                Text="Fill"
                Style="{StaticResource Headline}"/>
            <Border
                HorizontalOptions="Fill"
                StrokeThickness="5"
                Stroke="Red">
                <Border.StrokeShape>
                    <RoundRectangle
                        CornerRadius="5" />
                </Border.StrokeShape>
                <Grid
                    BackgroundColor="Blue"
                    HeightRequest="40">
                    <Label
                        Text="Fill"
                        TextColor="White"/>
                </Grid>
            </Border>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>