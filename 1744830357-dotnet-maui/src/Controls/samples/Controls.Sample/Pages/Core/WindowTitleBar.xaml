<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.WindowTitleBar"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="WindowTitleBar">

    <VerticalStackLayout
        Padding="10"
        Spacing="10">

        <Label
            Style="{StaticResource Headline}"
            Text="This page will eventually contain ways for you to ineract with the title bar but for now it's just here for validation."
            VerticalTextAlignment="Center" />

        <Label
            Text="The height of the title bar should match the caption buttons. The draggable area should span the entire height/width of the titlebar with no dead zones  This should all remain true as you resize the window and navigate around the app."
            VerticalTextAlignment="Center" />

        <Label
            Text="Push Modal and you shouldn't see overlapping content in the titlebar"
            Style="{StaticResource Headline}"/>

        <Button
            Grid.Row="3"
            Text="Push Modal"
            Clicked="OnPushModalClicked" />

    </VerticalStackLayout>

</views:BasePage>