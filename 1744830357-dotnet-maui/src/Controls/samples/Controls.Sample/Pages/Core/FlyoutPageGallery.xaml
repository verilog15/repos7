<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.FlyoutPageGallery"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base">
    <views:BasePage.Content>
        <StackLayout
            Margin="12">
            <Label x:Name="lblPresented"></Label>
            <Button Text="Show Flyout" Clicked="ShowFlyout" />
            <Button Text="Close Flyout" Clicked="CloseFlyout" />
            <Label Text="Is Gesture Enabled For Flyout" Style="{StaticResource Headline}"/>
            <CheckBox IsChecked="true" CheckedChanged="OnGestureEnabledCheckChanged"></CheckBox>
            <Picker x:Name="flyoutBehaviorPicker"></Picker>
        </StackLayout>
    </views:BasePage.Content>
</views:BasePage>