<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls" 
    x:Class="Maui.Controls.Sample.Pages.WindowsSearchBarPage"
    Title="SearchBar Spell Check">
    <StackLayout Margin="20">
        <SearchBar x:Name="_searchBar" Text="Enter search term here" windows:SearchBar.IsSpellCheckEnabled="true" />
        <Button Text="Toggle spell check" Clicked="OnToggleButtonClicked" />
    </StackLayout>
</ContentPage>
