<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Maui.Controls.Sample.Controls"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls" 
    xmlns:primitives="clr-namespace:Microsoft.Maui;assembly=Microsoft.Maui"
    x:Class="Maui.Controls.Sample.Pages.iOSSwipeViewTransitionModePage"
    Title="SwipeView SwipeTransitionMode">
    <StackLayout Margin="20">
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center">
            <Label Text="SwipeTransitionMode:"
                   VerticalTextAlignment="Center" />
            <controls:EnumPicker EnumType="{x:Type primitives:SwipeTransitionMode}"
                              SelectedIndex="1"
                              SelectedIndexChanged="OnSwipeViewTransitionModeChanged" />
        </StackLayout>
        <SwipeView x:Name="swipeView"
                   ios:SwipeView.SwipeTransitionMode="Drag">
            <SwipeView.LeftItems>
                <SwipeItems>
                    <SwipeItem Text="Delete"
                               IconImageSource="calculator.png"
                               BackgroundColor="LightPink"
                               Invoked="OnDeleteSwipeItemInvoked" />
                </SwipeItems>
            </SwipeView.LeftItems>
            <Grid HeightRequest="60"
                  WidthRequest="300"
                  BackgroundColor="LightGray">
                <Label Text="Swipe right"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>
        </SwipeView>
    </StackLayout>
</ContentPage>
