<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls" 
        x:Class="Maui.Controls.Sample.Pages.AndroidTabbedPageSwipePage"
        android:TabbedPage.OffscreenPageLimit="2"
        android:TabbedPage.IsSwipePagingEnabled="true"
        android:TabbedPage.IsSmoothScrollEnabled="false"
        android:TabbedPage.ToolbarPlacement="Bottom"
        Title="TabbedPage">
    <ContentPage Title="Page 1">
        <StackLayout Margin="20">
            <Label Text="Page 1" HorizontalOptions="Center" />
            <Button Text="Toggle Swipe Paging" Clicked="OnSwipePagingButtonClicked" />
            <Button Text="Toggle Smooth Scroll" Clicked="OnSmoothScrollButtonClicked" />
            <Button Text="Return to Platform-Specifics List" Clicked="OnReturnButtonClicked" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Page 2">
        <StackLayout Margin="20">
            <Label Text="Page 2" HorizontalOptions="Center" />
            <Button Text="Return to Platform-Specifics List" Clicked="OnReturnButtonClicked" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Page 3">
        <StackLayout Margin="20">
            <Label Text="Page 3" HorizontalOptions="Center" />
            <Button Text="Return to Platform-Specifics List" Clicked="OnReturnButtonClicked" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Page 4">
        <StackLayout Margin="20">
            <Label Text="Page 4" HorizontalOptions="Center" />
            <Button Text="Return to Platform-Specifics List" Clicked="OnReturnButtonClicked" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Page 5">
        <StackLayout Margin="20">
            <Label Text="Page 5" HorizontalOptions="Center" />
            <Button Text="Return to Platform-Specifics List" Clicked="OnReturnButtonClicked" />
        </StackLayout>
    </ContentPage>
</TabbedPage>
