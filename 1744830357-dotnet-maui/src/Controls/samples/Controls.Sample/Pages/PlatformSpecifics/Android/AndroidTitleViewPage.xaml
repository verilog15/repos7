<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.AndroidTitleViewPage">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="My TitleView" Style="{DynamicResource TitleStyle}" />
            <SearchBar />
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout Margin="20">
        <Label Text="The TitleView on the NavigationPage has a BarHeight of 450." />
        <Button Text="Return to Platform-Specifics List" Clicked="OnReturnButtonClicked" />
    </StackLayout>    
</ContentPage>
