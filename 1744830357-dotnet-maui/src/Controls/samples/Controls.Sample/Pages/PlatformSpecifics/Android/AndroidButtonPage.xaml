<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    x:Class="Maui.Controls.Sample.Pages.AndroidButtonPage" 
    Title="Button Default Padding and Shadow">
    <StackLayout Margin="20">
        <Label Text="The following buttons have identical definitions, except that the second button uses the default padding and default shadow platform-specifics."/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Button"
                    BackgroundColor="Bisque"
                    TextColor="Blue"
                    CornerRadius="50"
                    HeightRequest="100"
                    WidthRequest="100"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            <Button Text="Button"
                    BackgroundColor="Bisque" 
                    TextColor="Blue"
                    CornerRadius="50"
                    HeightRequest="100"
                    WidthRequest="100"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    android:Button.UseDefaultPadding="true" 
                    android:Button.UseDefaultShadow="true" />
        </StackLayout>
    </StackLayout>
</ContentPage>
