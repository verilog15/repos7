<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.StepperPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Stepper">
    <views:BasePage.Content>
        <VerticalStackLayout
            Margin="12">
            <Label
                Text="Default"
                Style="{StaticResource Headline}"/>
            <Stepper/>
            <Label
                Text="Disabled"
                Style="{StaticResource Headline}"/>
            <Stepper
                x:Name="EnableStepper"
                IsEnabled="False"/>
            <Button
                x:Name="EnableButton"
                Text="Enable Stepper"
                Clicked="OnEnableButtonClicked"/>
            <Label
                Text="BackgroundColor"
                Style="{StaticResource Headline}"/>
            <Stepper
                BackgroundColor="Red"/>
            <Label
                Text="Background"
                Style="{StaticResource Headline}" />
            <Stepper>
                <Stepper.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="Yellow"   
                                      Offset="0.1" />
                        <GradientStop Color="Green"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </Stepper.Background>
            </Stepper>
            <Label
                Text="Minimum (25) and Maximum (25)"
                Style="{StaticResource Headline}"/>
            <Stepper
                Minimum="5"
                Maximum="25"/>
            <Label
                Text="Increment (2)"
                Style="{StaticResource Headline}"/>
            <Stepper
                Minimum="0"
                Maximum="100"
                Increment="2"/>
            <Label
                Text="ValueChanged"
                Style="{StaticResource Headline}"/>
            <Stepper
                x:Name="ValueChangedStepper"
                Minimum="0"
                Maximum="100"
                Increment="1"
                ValueChanged="OnValueChanged"/>
            <Label
                FontSize="Micro"
                Text="{Binding Source={x:Reference ValueChangedStepper}, Path=Value}"/>
        </VerticalStackLayout>
    </views:BasePage.Content>
</views:BasePage>