<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.ShapesGalleries.UpdatePathDataGallery"
    Title="Update Path Data Gallery">
    <ContentPage.Content>
        <Grid
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Path
                x:Name="Path"
                Data="M 10,100 C 10,300 300,-200 300,100"
                Stroke="Black"/>
            <Button 
                Grid.Row="1"
                Text="Update Path Data"
                Clicked="OnUpdatePathDataButtonClicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
