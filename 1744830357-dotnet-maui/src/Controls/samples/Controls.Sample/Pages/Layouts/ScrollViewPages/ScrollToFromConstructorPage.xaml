<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.ScrollViewPages.ScrollToFromConstructorPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="ScrollView">
    <views:BasePage.Content>
		<ScrollView
			x:Name="ScrollView"
			Orientation="Vertical"
			VerticalScrollBarVisibility="Always">
			<VerticalStackLayout
				Spacing="5">
				<BoxView
					Color="Red"
					HeightRequest="250"
					ScaleX="1"/>
				<BoxView
					Color="Green"
					HeightRequest="250"
					ScaleX=".9"/>
				<BoxView
					Color="Red"
					HeightRequest="250"
					ScaleX=".8"/>
				<BoxView
					Color="Green"
					HeightRequest="250"
					ScaleX=".7"/>
				<BoxView
					Color="Red"
					HeightRequest="250"
					ScaleX=".6"/>
				<BoxView
					Color="Green"
					HeightRequest="250"
					ScaleX=".5"/>
				<BoxView
					Color="Red"
					HeightRequest="250"
					ScaleX=".4"/>
				<BoxView
					Color="Green"
					HeightRequest="250"
					ScaleX=".3"/>
				<BoxView
					Color="Red"
					HeightRequest="250"
					ScaleX=".2"/>
				<BoxView
					Color="Green"
					HeightRequest="250"
					ScaleX=".1"/>
			</VerticalStackLayout>
		</ScrollView>
    </views:BasePage.Content>
</views:BasePage>
