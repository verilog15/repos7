<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.StackLayoutPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="StackLayout">
    <views:BasePage.Content>
        <StackLayout
            Margin="12">
            <Label
                Text="Vertical"
                Style="{StaticResource Headline}"/>
            <StackLayout>
                <BoxView Color="Red" />
                <BoxView Color="Yellow" />
                <BoxView Color="Blue" />
                <BoxView Color="Green" />
                <BoxView Color="Orange" />
                <BoxView Color="Purple" />
            </StackLayout>
            <Label
                Text="Horizontal"
                Style="{StaticResource Headline}"/>
            <StackLayout
                Orientation="Horizontal">
                <BoxView Color="Red" />
                <BoxView Color="Yellow" />
                <BoxView Color="Blue" />
                <BoxView Color="Green" />
                <BoxView Color="Orange" />
                <BoxView Color="Purple" />
            </StackLayout>
        </StackLayout>
    </views:BasePage.Content>
</views:BasePage>