  "cmdliner"            {           >= "1.0.0"               }
  "ocamlfind"           {           >= "1.8.0"               }
  "sexplib"             {           >= "v0.13.0"             }
  "dune"                {           >= "2.0.1"               }
  "ppx_import" {build & >= "1.5-3" & < "2.0"}
  "ppx_deriving" {>= "4.2.1" & < "6"}
  "ppx_sexp_conv"       {           >= "v0.13.0" & < "v0.15" }
  "yojson"              {           >= "1.7.0"               }
  "ppx_deriving_yojson" {           >= "3.4"                 }
]

