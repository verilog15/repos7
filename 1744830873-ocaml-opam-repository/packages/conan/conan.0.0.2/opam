  "dune"                {>= "2.9.0"}
  "uutf"
  "ptime"
  "alcotest"            {with-test}
  "crowbar"             {>= "0.2" & with-test}
  "fmt"                 {with-test}
  "rresult"             {with-test}
  "mirage"              {with-test}
