depends: [
  "ocaml" {>= "4.11" & build}
  "batteries" {>= "3.5.0"}
  "menhir" {>= "20160825" & build}
  "menhirLib"
  "camlidl"
  "zarith" {>= "1.9.0"}
  "apron" {>= "v0.9.12"}
  "conf-ppl"
  "yojson" {>= "1.6.0"}
