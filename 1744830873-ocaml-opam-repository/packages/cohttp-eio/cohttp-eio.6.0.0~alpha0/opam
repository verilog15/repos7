  "base-domains"
  "eio" {>= "0.6" & < "0.7"}
  "eio_main" {with-test}
  "mdx" {with-test}
  "uri" {with-test}
  "conf-nmap" {with-test}
  "fmt"
  "http" {= version}
  "odoc" {with-doc}
]
