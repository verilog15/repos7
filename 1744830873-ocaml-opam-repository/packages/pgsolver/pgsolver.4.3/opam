  "ocaml" {>= "4.08.0" & < "5.0"}
  "TCSLib" {>= "0.2"}
  "extlib" | "extlib-compat"
  "minisat"
  "ocaml-sat-solvers" {>= "0.7.1"}
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "ounit" {build}
]
