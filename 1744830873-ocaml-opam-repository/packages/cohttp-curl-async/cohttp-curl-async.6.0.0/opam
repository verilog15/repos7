  "dune" {>= "3.8"}
  "ocurl" {>= "0.9.2"}
  "http" {= version}
  "stringext"
  "cohttp-curl" {= version}
  "core" {>= "v0.16.0"}
  "core_unix" {>= "v0.14.0"}
  "core_kernel" {with-test}
  "async_kernel" {with-test & >= "v0.17.0"}
  "async_unix" {with-test}
  "cohttp-async" {with-test & = version}
  "uri" {with-test & >= "4.2.0"}
  "fmt" {with-test}
  "ounit2" {with-test}
  "alcotest" {with-test & >= "1.7.0"}
  "odoc" {with-doc}
]
