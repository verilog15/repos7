build: [
  ["sh" "./detect_program.sh" "./conf-bmake.config" "bmake"] {!(os = "freebsd" | os = "openbsd" | os = "netbsd")}
  ["sh" "./detect_program.sh" "./conf-bmake.config" "make"] {(os = "freebsd" | os = "openbsd" | os = "netbsd")}
]
