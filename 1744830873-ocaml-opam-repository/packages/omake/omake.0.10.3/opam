bug-reports: "https://github.com/ocaml-omake/issues"

patches: ["lib_build_OCaml.om.diff"]

build: [
  ["./configure" "-prefix" "%{prefix}%"]
  [make]
]

install: [
  [make "install"]
]

remove: [
  [ "rm" "-f" "%{prefix}%/bin/omake" ]
  [ "rm" "-f" "%{prefix}%/bin/osh" ]
  [ "rm" "-rf" "%{prefix}%/lib/omake" ]
]

depends: [
  "ocaml" {>= "4.03.0" & < "5.0"}
  "ocamlfind"
]
