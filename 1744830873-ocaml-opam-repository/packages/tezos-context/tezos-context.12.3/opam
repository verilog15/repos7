depends: [
  "dune" { >= "2.9" }
  "tezos-base" { = version }
  "irmin" { >= "2.9.0" }
  "irmin-pack" { >= "2.9.0" & < "2.10.0"}
  "tezos-shell-services" { = version }
  "bigstringaf" { >= "0.2.0" }
  "digestif" {>= "0.7.3"}
  "vector" { with-test }
  "alcotest-lwt" { with-test & >= "1.5.0" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_context/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
