  "ocaml"          {>= "4.03.0" & < "5.0"}
  "dune" {>= "1.1"}
  "eqaf"
  "base-bytes"
  "base-bigarray"
  "fmt"            {with-test}
  "alcotest"       {with-test & < "1.0.0"}
]

