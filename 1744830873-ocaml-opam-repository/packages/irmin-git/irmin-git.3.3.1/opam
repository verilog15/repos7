  "logs"
  "lwt"        {>= "5.3.0"}
  "uri"
  "mimic"
  "irmin-test" {with-test & = version}
  "git-unix"   {with-test & >= "3.7.0"}
  "mtime" {with-test & >= "1.0.0" & < "2.0.0"}
  "alcotest"   {with-test}
]
