  "ocaml"
  "ocamlfind"
  "ounit"
  "fileutils"
  "camomile" {< "2.0.0"}
  "camlp4"
  "base-bytes"
]
install: [make "install"]
synopsis:
  "Provides enough service to build a basic internationalized program"
