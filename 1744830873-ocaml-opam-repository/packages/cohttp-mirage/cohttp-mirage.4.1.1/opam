  "ocaml" {>= "4.08"}
  "dune" {>= "2.0"}
  "mirage-flow" {>= "2.0.0"}
  "mirage-channel" {>= "4.0.0"}
  "conduit" {>= "2.0.2" & < "8.0.0"}
  "conduit-mirage" {>= "2.3.0" & < "8.0.0"}
  "mirage-kv" {>= "3.0.0"}
  "lwt" {>= "2.4.3"}
  "cohttp" {= version}
  "cohttp-lwt" {= version}
  "fmt" {>= "0.8.7"}
  "astring"
  "magic-mime"
  "ppx_sexp_conv" {>= "v0.13.0"}
]
