doc: "https://garrigue.github.io/lablgtk/lablgtk3/lablgtk3-goocanvas2"
license: "LGPL-2.1-or-later WITH OCaml-LGPL-linking-exception"

depends: [
  "ocaml"                {         >= "4.09.0" }
  "dune"                 {         >= "1.8.0"  }
  "lablgtk3"             {          = version  }
  "conf-goocanvas2"      { build & >= "0"      }
  "camlp-streams"        { build               }
]

build: [
  [ "dune" "subst" ] {dev}
  [ "dune" "build" "-p" name "-j" jobs ]
]
