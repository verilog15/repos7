  "dune" {>= "2.9"}
  "mdx" {with-test}
  "yojson"
  "omd" {>= "2.0.0~alpha2"}
  "textmate-language" {>= "0.3.0"}
  "textmate-language" {with-test & < "0.3.2"}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
